<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nesp_sdk_loading_tip_dialog_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <com.nesp.sdk.android.widget.loadingtipdialog.LVCircularRing
        android:id="@+id/lv_circularring"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone" />

    <com.nesp.sdk.android.widget.loadingtipdialog.LoadCircleView
        android:id="@+id/lcv_circleload"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible" />

    <com.nesp.sdk.android.widget.loadingtipdialog.RightDiaView
        android:id="@+id/rdv_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone" />

    <com.nesp.sdk.android.widget.loadingtipdialog.WrongDiaView
        android:id="@+id/wv_wrong"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</LinearLayout>