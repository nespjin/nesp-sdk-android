<resources>

    <style name="SmoothAppTheme" parent="SmoothAppTheme.Light">

    </style>

    <style name="SmoothAppTheme.Light.BottomNavigationActivity" parent="SmoothAppTheme.Light.Activity">
        <item name="android:windowTranslucentStatus">true</item>
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--<item name="android:navigationBarColor">@color/colorPrimaryDark</item>-->
        <item name="smoothBottomNavigationHeight">@dimen/smooth_bottom_view_height</item>
        <item name="smoothBottomNavigationBackgroundColor">@color/smoothSystemGray</item>
    </style>

    <style name="SmoothAppTheme.Light.Activity" parent="SmoothAppTheme.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--<item name="android:navigationBarColor">@color/colorPrimaryDark</item>-->
        <item name="android:fitsSystemWindows">false</item>
        <item name="smoothActionBarBackIndicator">@drawable/ic_smooth_back_indicator</item>
        <item name="smoothActionBarBackIndicatorColor">@color/smooth_action_bar_back_indicator_color</item>
        <item name="smoothActionBarBackIndicatorSize">@dimen/smooth_action_bar_back_indicator_size</item>
        <item name="smoothActionBarMenuIndicator">@drawable/ic_smooth_action_bar_menu_indicator</item>
        <item name="smoothActionBarMenuIndicatorColor">@color/smooth_action_bar_menu_indicator_color</item>
        <item name="smoothActionBarMenuIndicatorSize">@dimen/smooth_action_bar_menu_indicator_size</item>
        <item name="smoothActionBarMenuCornerRadius">@dimen/smooth_action_bar_menu_corner_radius</item>
        <item name="smoothActionBarMenuElevation">@dimen/smooth_action_bar_menu_elevation</item>
        <item name="smoothActionBarMenuBackgroundColor">@color/smooth_action_bar_menu_background_color</item>
        <item name="smoothActionBarMenuItemTitleStyle">@style/SmoothAppTheme.Light.ActionBarMenuItemTitle</item>
        <item name="smoothActionBarMenuItemSubtitleStyle">@style/SmoothAppTheme.Light.ActionBarMenuItemSubtitle</item>
        <item name="smoothActionBarTitleStyle">@style/SmoothAppTheme.Light.ActionBarTitle</item>
        <item name="smoothActionBarSubtitleStyle">@style/SmoothAppTheme.Light.ActionBarSubtitle</item>
        <item name="smoothActionBarLeftActionStyle">@style/SmoothAppTheme.Light.ActionBarLeftAction</item>
        <item name="smoothActionBarRightActionStyle">@style/SmoothAppTheme.Light.ActionBarRightAction</item>
        <item name="smoothActionBarHeight">?android:actionBarSize</item>
        <item name="smoothActionBarBackground">@color/smooth_action_bar_background_color</item>
        <item name="smoothActionBarTitleSpacing">@dimen/smooth_action_bar_title_spacing</item>
        <item name="smoothActionBarVerticalPadding">0dp</item>
        <item name="smoothActionBarHorizontalPadding">?attr/smoothActivityHorizontalPadding</item>
        <item name="smoothActivityVerticalPadding">@dimen/smooth_activity_vertical_margin</item>
        <item name="smoothActivityHorizontalPadding">@dimen/smooth_activity_horizontal_margin</item>
        <item name="smoothWidgetCommonBackgroundColor">@color/smooth_widget_common_background_color</item>
        <item name="smoothCommonItemBackgroundColor">@color/smooth_common_item_background_color</item>
        <item name="smoothCommonItemNormalBackgroundColor">@color/smooth_common_item_normal_background_color</item>
        <item name="smoothCommonItemClickBackgroundColor">@color/smooth_common_item_click_background_color</item>
        <item name="smoothRealtimeBlurRadius">@dimen/smooth_real_time_blur_radius</item>
        <item name="smoothWidgetRealtimeBlurRadius">@dimen/smooth_widget_real_time_blur_radius</item>

        <item name="smoothDialogStyle">@style/SmoothAppTheme.Light.SmoothDialog</item>
        <item name="smoothDialogActionStyle">@style/SmoothAppTheme.Light.SmoothDialog.Action</item>
        <item name="smoothDialogTitleStyle">@style/SmoothAppTheme.Light.SmoothDialog.Title</item>
        <item name="smoothDialogMessageStyle">@style/SmoothAppTheme.Light.SmoothDialog.Message</item>
        <item name="smoothDialogBackgroundColor">@color/smooth_dialog_background</item>
        <item name="smoothDialogCornerRadius">@dimen/smooth_dialog_corner_radius</item>
        <item name="smoothDialogElevation">@dimen/smooth_dialog_elevation</item>
        <item name="smoothDialogRealtimeBlurRadius">@dimen/smooth_dialog_real_time_blur_radius</item>
        <item name="smoothDialogDividerLineWidth">@dimen/smooth_dialog_divider_line_width</item>
        <item name="smoothDialogDividerLineColor">@color/smooth_dialog_divider_line_color</item>
        <item name="smoothDialogActionBackgroundColor">@color/smooth_dialog_action_bg_selector</item>
        <item name="smoothDialogActionClickBackgroundColor">@color/smooth_dialog_action_click_background_color</item>
        <item name="smoothDialogActionNormalBackgroundColor">@color/smooth_dialog_action_normal_background_color</item>
    </style>

    <style name="SmoothAppTheme.Light.SmoothSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="track">@drawable/smooth_switch_track</item>
        <item name="android:thumb">@drawable/smooth_switch_thumb</item>
        <item name="switchTextAppearance">@style/SmoothAppTheme.Light.SmoothSwitch.TextAppearance</item>
        <item name="android:background">?attr/controlBackground</item>
        <item name="showText">false</item>
        <item name="switchPadding">@dimen/abc_switch_padding</item>
        <item name="android:textOn">@string/abc_capital_on</item>
        <item name="android:textOff">@string/abc_capital_off</item>
    </style>

    <style name="SmoothAppTheme.Light.SmoothSwitch.TextAppearance" parent="TextAppearance.AppCompat.Widget.Switch">

    </style>

    <style name="SmoothAppTheme.Light.SmoothDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/SmoothAppTheme.Light.SmoothDialog.Animation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="SmoothAppTheme.Light.SmoothDialog.Animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/smooth_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/smooth_dialog_exit</item>
    </style>

    <style name="SmoothAppTheme.Light.SmoothDialog.Action">
        <item name="android:textColor">@color/smooth_dialog_action_text_color</item>
        <item name="android:textSize">@dimen/smooth_dialog_action_text_size</item>
    </style>

    <style name="SmoothAppTheme.Light.SmoothDialog.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/smooth_dialog_title_text_color</item>
        <item name="android:textSize">@dimen/smooth_dialog_title_text_size</item>
    </style>

    <style name="SmoothAppTheme.Light.SmoothDialog.Message">
        <item name="android:textColor">@color/smooth_dialog_message_text_color</item>
        <item name="android:textSize">@dimen/smooth_dialog_message_text_size</item>
    </style>

    <style name="SmoothAppTheme.Light.ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/smooth_action_bar_title_text_size</item>
    </style>

    <style name="SmoothAppTheme.Light.ActionBarSubtitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">@dimen/smooth_action_bar_subtitle_text_size</item>
    </style>

    <style name="SmoothAppTheme.Light.ActionBarLeftAction" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">@dimen/smooth_action_bar_left_action_text_size</item>
        <item name="android:textColor">@color/smooth_action_bar_left_action_text_color</item>
        <item name="android:tint">@color/smooth_action_bar_left_action_text_color</item>
        <item name="android:backgroundTint">@color/smooth_action_bar_left_action_text_color</item>
    </style>

    <style name="SmoothAppTheme.Light.ActionBarRightAction" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">@dimen/smooth_action_bar_right_action_text_size</item>
        <item name="android:textColor">@color/smooth_action_bar_right_action_text_color</item>
        <item name="android:tint">@color/smooth_action_bar_right_action_text_color</item>
        <item name="android:backgroundTint">@color/smooth_action_bar_right_action_text_color</item>
    </style>

    <style name="SmoothAppTheme.Light.ActionBarMenuItemTitle">
        <item name="android:textSize">@dimen/smooth_action_bar_menu_item_title_text_size</item>
        <item name="android:textColor">@color/smooth_action_bar_menu_item_title_text_color</item>
    </style>

    <style name="SmoothAppTheme.Light.ActionBarMenuItemSubtitle">
        <item name="android:textSize">@dimen/smooth_action_bar_menu_item_subtitle_text_size</item>
        <item name="android:textColor">@color/smooth_action_bar_menu_item_subtitle_text_color</item>
    </style>

    <style name="SmoothAppTheme.Light" parent="Theme.MaterialComponents.Light" />

    <style name="SmoothAppTheme.Light.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="SmoothAppTheme.DayNight" parent="Theme.MaterialComponents.DayNight" />

    <style name="SmoothAppTheme.DayNight.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

</resources>